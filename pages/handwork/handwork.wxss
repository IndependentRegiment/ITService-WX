/* pages/handwork/handwork.wxss */
.hand-wrap{
  background-color: rgba(244, 244, 244, 100);
  padding:30rpx;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  font-size: 36rpx;
  color:#222b33;
}
.date-wrap{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 0;
  background: white;
  padding-left: 30rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
}
.tag-txt{
  display: block;
  padding-bottom: 30rpx;
  font-size: 28rpx;
  color: #da1313;
}


.blue {
  width: 100% !important;
  color: #F7F7F7;
  position: fixed;
  height: 60px;
  line-height: 40px;
  bottom: 0;
  left: 0;
  background: #1ea0fa;
}