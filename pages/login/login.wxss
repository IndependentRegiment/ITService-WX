/* pages/login/login.wxss */
.title {
  text-align: center;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #f1f1f1;
  color: #199ED8;
  font-size: 18px;
} 
.content {
  margin-left: 5px;
  margin-right: 10px;
}
.key {
  color: red;
}
.item-top {
  margin: 5px 10px;
  font-size: 14px;
}
.item-ipt {
  border: 1px solid #f1f1f1;
  height: 40px;
  margin: 0 5px 10px 10px;  
  padding-left: 10px;
  border-radius: 4px;
}
.picker {
  border: 1px solid #f1f1f1;
  height: 30px;
  margin: 0 5px 10px 10px;  
  padding: 7px 0px 3px 10px;
  border-radius: 4px;
  font-size: 14px;
}
.btn {
  height: 50px;
  text-align: center;
  line-height: 50px;
  background-color: #199ED8;
  color: #fff;
  margin: 15px 5px 10px 10px;  
  padding-left: 10px;
  border-radius: 4px;
}