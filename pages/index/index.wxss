
/**index.wxss**/
.slides {
  height: 380rpx;
}
.slides image{
  width: 100%;
  height: 100%;
}
.grids {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-left: 1rpx solid #eee;
  /* border-bottom: 1rpx solid #eee; */
  color: #888;
  font-size: 28rpx;
}
.grids .item {
  /* background-color: #fff; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3333333333333%;
  height: 250rpx;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  /* border-top: 1rpx solid #eee; */
  box-sizing: border-box;
}
.grids .item image {
  width: 79rpx;
  height: 70rpx;
}
.grids .item text{
  margin-top: 20rpx;
  color: #888;
  font-size: 28rpx;

}

.bottom {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bottom image {
  width: 400rpx;
  height: 400rpx;
}
.bottom text{
  margin-top: 20rpx;
  color: #888;
  font-size: 28rpx;
}