page{
  background-color: rgba(244, 244, 244, 100);
}
.main-wrap{
  padding:10px;
}
.info-wrap{
  background-color:white;
  padding:5px 10px;
  border-radius: 5px;
  margin-bottom: 10px;
}
.info-item{
  display: flex;
  font-size: 16px;
  color: rgb(13, 39, 56);
  line-height: 36px;
  margin-top:10px;
}
.input-wrap{
   flex:1;
   border-bottom:1px solid #f1f1f1;
   border-radius: 5px;
   padding:0 10px;
   box-sizing: border-box;
}

.input-wrap input{
  height: 36px;
  line-height: 36px;
}
/* 第二部分 */
/* 单选框样式 */
radio ,checkbox{
  transform:scale(0.7);
}
.radio-left{
  padding-left: 20px;
}
.group text{
  margin-left: -5px;
}
.noflex{
  display: block;
}
